<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leadinsource.dailyweightlog">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.leadinsource.dailyweightlog.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.leadinsource.dailyweightlog.SettingsActivity"
            android:parentActivityName="com.leadinsource.dailyweightlog.MainActivity" />
        <activity android:name="com.leadinsource.dailyweightlog.HistoryActivity" />
        <provider
            android:authorities="com.leadinsource.dailyweightlog"
            android:name="com.leadinsource.dailyweightlog.db.WeightContentProvider"
            android:exported="false" />
    </application>

</manifest>