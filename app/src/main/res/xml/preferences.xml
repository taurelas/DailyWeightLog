<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference android:key="height"
        android:title="Height"
        />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="show_fat_percentage"
        android:summaryOff="Not measuring fat percentage"
        android:summaryOn="Measuring fat percentage"
        android:title="Fat percentage" />
    <ListPreference
        android:defaultValue="metric"
        android:entries="@array/pref_system_option_labels"
        android:entryValues="@array/pref_system_values"
        android:key="measurement_system"
        android:title="@string/measurement_system_title" />
    <ListPreference
        android:defaultValue="male"
        android:entries="@array/pref_sex_labels"
        android:entryValues="@array/pref_sex_values"
        android:key="sex"
        android:title="Sex" />

</PreferenceScreen>