<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_margin"
    android:layout_marginEnd="@dimen/activity_margin"
    tools:context="com.leadinsource.dailyweightlog.MainActivity"
    tools:layout_editor_absoluteY="81dp">



    <TextView
        android:id="@+id/tv_todays_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginTop="8dp"
        android:text="Today's weight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/activity_margin" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_today"
        style="@style/weightList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_todays_label">

    </android.support.v7.widget.RecyclerView>

    <include
        android:id="@+id/layout_previous"
        layout="@layout/activity_main_previous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_today" />



</android.support.constraint.ConstraintLayout>
